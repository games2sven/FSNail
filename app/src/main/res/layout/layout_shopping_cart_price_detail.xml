<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:layout_alignParentRight="true"
        android:id="@+id/shop_price_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        >
        <ImageView
            android:layout_marginTop="@dimen/DIMEN_106PX"
            android:layout_width="@dimen/DIMEN_80PX"
            android:layout_height="@dimen/DIMEN_80PX"
            android:src="@mipmap/content_icon_scan"
            />

        <TextView

            android:layout_marginTop="@dimen/DIMEN_90PX"
            android:layout_width="@dimen/DIMEN_126PX"
            android:layout_height="@dimen/DIMEN_64PX"
            android:text="@string/tv_get"
            android:background="@drawable/dialog_search_button_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_28PX"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="@dimen/DIMEN_180PX"
        android:layout_alignParentRight="true"
        android:id="@+id/shop_price_mid"
        android:layout_marginLeft="@dimen/DIMEN_104PX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >

        <TextView
            android:id="@+id/total_price"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="€ 240.00"
            />
        <TextView
            android:background="@drawable/gray_stoke_bg"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            style="@style/service_title_sty"
            android:layout_width="@dimen/DIMEN_234PX"
            android:layout_height="@dimen/DIMEN_65PX"
            android:gravity="center_vertical"
            android:text="€ 20.00"
            />
        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_27PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="€ 20.00"
            />
        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="€ 20.00"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40PX"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/shop_cart_add"
                android:layout_width="@dimen/DIMEN_40PX"
                android:layout_height="@dimen/DIMEN_40PX"
                android:src="@mipmap/number_icon_add"
                />
            <TextView
                android:id="@+id/tv_shop_cart_jifeng"
                android:layout_marginRight="@dimen/DIMEN_8PX"
                android:layout_marginLeft="@dimen/DIMEN_8PX"
                android:layout_width="@dimen/DIMEN_97PX"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/DIMEN_24PX"
                android:background="@drawable/gray_stoke_bg"
                android:layout_height="@dimen/DIMEN_40PX"
                android:text="0"
                />
            <ImageView
                android:id="@+id/shop_cart_minus"
                android:layout_width="@dimen/DIMEN_40PX"
                android:layout_height="@dimen/DIMEN_40PX"
                android:src="@mipmap/number_icon_minus"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_price_left"
        android:layout_toLeftOf="@id/shop_price_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        >

        <TextView
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="@string/tv_total_price"
            />
        <TextView
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="@string/tv_card"
            />
        <TextView
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="@string/tv_voucher_price"
            />
        <TextView
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="@string/tv_app_order"
            />
        <TextView
            android:layout_marginTop="@dimen/DIMEN_40PX"
            style="@style/service_title_sty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"
            android:text="@string/tv_use_score"
            />

    </LinearLayout>

    <View
        android:id="@+id/price_line"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:layout_below="@id/shop_price_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#cacbcc"
        />

    <TextView
        android:id="@+id/tv_price_finally"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:layout_alignRight="@id/shop_price_left"
        android:layout_below="@+id/price_line"
        android:text="@string/tv_final_price"
        android:textSize="@dimen/DIMEN_28PX"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_40PX" />
    <TextView
        android:id="@+id/tv_price_finally_value"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_alignLeft="@id/shop_price_mid"
        android:layout_below="@+id/price_line"
        android:text="€ 190.00"
        android:textSize="@dimen/DIMEN_32PX"
        android:textColor="#dc5562"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_45PX" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#cacbcc"
        />

</RelativeLayout>