<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:background="@drawable/corner_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/service_name_title"
                android:textColor="#333333"
                android:textSize="@dimen/DIMEN_30PX"
                android:layout_marginLeft="@dimen/DIMEN_66PX"
                android:text="@string/tv_user_agreement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_return"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/DIMEN_12PX"
                android:paddingLeft="@dimen/DIMEN_62PX"
                android:paddingRight="@dimen/DIMEN_62PX"
                android:paddingTop="@dimen/DIMEN_12PX"
                android:text="@string/btn_return"
                android:textColor="@color/green_94c42e"
                android:background="@mipmap/btn_return"
                android:textSize="@dimen/DIMEN_28PX" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_agreement_content"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="#6a6b6c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
              android:padding="@dimen/DIMEN_60PX"

            />

    </LinearLayout>

</LinearLayout>