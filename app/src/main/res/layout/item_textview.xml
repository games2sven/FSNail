<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/ll_spinner"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="3"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ms__item_height"
        android:paddingLeft="@dimen/ms__popup_padding_left"
        android:singleLine="true"
        android:text="Manicure SPA senza smalto"
        android:textColor="@color/text_dark1"
        android:textSize="@dimen/DIMEN_24PX" />
</LinearLayout>