<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:background="@drawable/login_input_white_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_440PX"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
       <LinearLayout
           android:layout_marginLeft="@dimen/DIMEN_60PX"
           android:layout_marginTop="@dimen/DIMEN_60PX"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >

           <LinearLayout
               android:id="@+id/ll_regStart"
               android:gravity="center_vertical"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:layout_height="@dimen/DIMEN_64PX"
               android:orientation="horizontal"
               >

               <TextView
                   android:id="@+id/tv_regStart"
                   android:paddingLeft="@dimen/DIMEN_17PX"
                   android:gravity="center_vertical"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="@dimen/DIMEN_28PX"
                   android:textColor="#333333"
                   android:hint="@string/tv_register_time"
                   />

               <ImageView
                   android:layout_marginRight="@dimen/DIMEN_20PX"
                   android:layout_width="@dimen/DIMEN_34PX"
                   android:layout_height="@dimen/DIMEN_34PX"
                   android:src="@mipmap/remain_icon_date"
                   />
           </LinearLayout>


           <LinearLayout
               android:id="@+id/ll_birStart"
               android:layout_marginTop="@dimen/DIMEN_30PX"
               android:gravity="center_vertical"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:layout_height="@dimen/DIMEN_64PX"
               android:orientation="horizontal"
               >

               <TextView
                   android:id="@+id/tv_birStart"
                   android:paddingLeft="@dimen/DIMEN_17PX"
                   android:gravity="center_vertical"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="@dimen/DIMEN_28PX"
                   android:textColor="#333333"
                   android:hint="@string/tv_customer_birthday"
                   />

               <ImageView
                   android:layout_marginRight="@dimen/DIMEN_20PX"
                   android:layout_width="@dimen/DIMEN_34PX"
                   android:layout_height="@dimen/DIMEN_34PX"
                   android:src="@mipmap/remain_icon_date"
                   />
           </LinearLayout>
           <EditText
               android:id="@+id/et_startInt"
               android:layout_marginTop="@dimen/DIMEN_30PX"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:hint="@string/keyongjifen"
               android:textColor="#b0b0b0"
               android:textColorHint="#b0b0b0"
               android:textSize="@dimen/DIMEN_28PX"
               android:inputType="number"
               android:paddingLeft="@dimen/DIMEN_17PX"
               android:layout_height="@dimen/DIMEN_64PX" />

       </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
        <TextView
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_90PX"
            android:layout_width="@dimen/DIMEN_30PX"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="#b0b0b0"
            />
        <TextView
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_90PX"
            android:layout_width="@dimen/DIMEN_30PX"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="#b0b0b0"
            />
        <TextView
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_90PX"
            android:layout_width="@dimen/DIMEN_30PX"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="#b0b0b0"
            />
            </LinearLayout>
       <LinearLayout
           android:layout_marginTop="@dimen/DIMEN_60PX"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >

           <LinearLayout
               android:id="@+id/ll_regEnd"
               android:gravity="center_vertical"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:layout_height="@dimen/DIMEN_64PX"
               android:orientation="horizontal"
               >

               <TextView
                   android:id="@+id/tv_regEnd"
                   android:paddingLeft="@dimen/DIMEN_17PX"
                   android:gravity="center_vertical"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="@dimen/DIMEN_28PX"
                   android:textColor="#333333"
                   android:hint="@string/tv_register_time"
                   />

               <ImageView
                   android:layout_marginRight="@dimen/DIMEN_20PX"
                   android:layout_width="@dimen/DIMEN_34PX"
                   android:layout_height="@dimen/DIMEN_34PX"
                   android:src="@mipmap/remain_icon_date"
                   />
           </LinearLayout>



           <LinearLayout
               android:id="@+id/ll_birEnd"
               android:layout_marginTop="@dimen/DIMEN_30PX"
               android:gravity="center_vertical"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:layout_height="@dimen/DIMEN_64PX"
               android:orientation="horizontal"
               >

               <TextView
                   android:id="@+id/tv_birEnd"
                   android:paddingLeft="@dimen/DIMEN_17PX"
                   android:gravity="center_vertical"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="@dimen/DIMEN_28PX"
                   android:textColor="#333333"
                   android:hint="@string/tv_customer_birthday"
                   />

               <ImageView
                   android:layout_marginRight="@dimen/DIMEN_20PX"
                   android:layout_width="@dimen/DIMEN_34PX"
                   android:layout_height="@dimen/DIMEN_34PX"
                   android:src="@mipmap/remain_icon_date"
                   />
           </LinearLayout>
           <EditText
               android:id="@+id/et_endInt"
               android:layout_marginTop="@dimen/DIMEN_30PX"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:hint="@string/keyongjifen"
               android:inputType="number"
               android:textColor="#b0b0b0"
               android:textColorHint="#b0b0b0"
               android:textSize="@dimen/DIMEN_28PX"
               android:paddingLeft="@dimen/DIMEN_17PX"
               android:layout_height="@dimen/DIMEN_64PX" />

       </LinearLayout>
       <LinearLayout
           android:layout_marginRight="@dimen/DIMEN_60PX"
           android:layout_marginLeft="@dimen/DIMEN_70PX"
           android:layout_marginTop="@dimen/DIMEN_60PX"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >

           <EditText
               android:id="@+id/et_name"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:hint="@string/customer_name"
               android:textColor="#b0b0b0"
               android:textColorHint="#b0b0b0"
               android:textSize="@dimen/DIMEN_28PX"
               android:inputType="text"
               android:paddingLeft="@dimen/DIMEN_17PX"
               android:layout_height="@dimen/DIMEN_64PX" />
           <EditText
               android:id="@+id/et_phone"
               android:layout_marginTop="@dimen/DIMEN_30PX"
               android:background="@drawable/bg_search_item"
               android:layout_width="match_parent"
               android:hint="@string/hint_customer_phone"
               android:inputType="phone"
               android:textColor="#b0b0b0"
               android:textColorHint="#b0b0b0"
               android:textSize="@dimen/DIMEN_28PX"
               android:paddingLeft="@dimen/DIMEN_17PX"
               android:layout_height="@dimen/DIMEN_64PX" />

       </LinearLayout>


    </LinearLayout>
        <TextView
            android:id="@+id/btn_search"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_27PX"
            android:gravity="center"
            android:background="@drawable/dialog_search_button_bg"
            android:textColor="@color/white"
            android:text="@string/tv_serch"
            android:layout_width="@dimen/DIMEN_360PX"
            android:layout_height="@dimen/DIMEN_70PX" />
    </LinearLayout>

</LinearLayout>