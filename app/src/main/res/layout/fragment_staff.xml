<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/staff_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:orientation="horizontal"
        android:background="@drawable/corner_white"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="@dimen/DIMEN_185PX"
            android:layout_height="match_parent">
        <TextView
            android:textColor="@color/black_333333"
            android:textSize="@dimen/DIMEN_30PX"
            android:gravity="center"
            android:layout_width="@dimen/DIMEN_185PX"
            android:layout_height="match_parent"
            android:text="@string/tv_today_employee"
            />
            
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_4PX"
                android:background="#94c42e"
                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginLeft="@dimen/DIMEN_227PX"
            android:layout_width="@dimen/DIMEN_120PX"
            android:layout_height="match_parent">
        <TextView

            android:textColor="@color/black_6a6b6c"
            android:textSize="@dimen/DIMEN_30PX"
            android:gravity="center"
            android:layout_width="@dimen/DIMEN_185PX"
            android:layout_height="match_parent"
            android:text="@string/tv_all_employee"
            />

            <View
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_4PX"
                android:background="#94c42e"
                />
        </RelativeLayout>
    </LinearLayout>

          <android.support.v7.widget.RecyclerView
              android:layout_marginTop="@dimen/DIMEN_20PX"
              android:layout_below="@id/staff_title"
              android:id="@+id/recylerview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_staff_more"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_80PX"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/DIMEN_96PX"
        android:layout_height="@dimen/DIMEN_96PX"
        android:src="@mipmap/btn_more_red1"
        />

</RelativeLayout>