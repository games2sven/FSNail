<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_80PX"
    android:orientation="horizontal"

    >
    <TextView
        android:id="@+id/staff_time_week"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/DIMEN_28PX"
        android:gravity="center"
        android:text="星期一"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/staff_time_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_28PX"
            android:textColor="#6a6b6c"
            android:text="09:00"
            />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1PX"
                android:background="@color/black_cccccc"
                />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/DIMEN_10PX"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/staff_time_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_28PX"
            android:textColor="#6a6b6c"
            android:text="09:00"
            />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1PX"
                android:background="@color/black_cccccc"
                />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:gravity="center"
        
        >
        <ImageView
            android:id="@+id/staff_time_select_bt"
            android:layout_width="@dimen/DIMEN_81PX"
            android:layout_height="@dimen/DIMEN_39PX"
            android:src="@mipmap/turn_on"
            />


        <TextView
            android:id="@+id/staff_time_select_tv"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            android:layout_width="@dimen/DIMEN_147PX"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_28PX"
            android:textColor="#6a6b6c"
            android:text="Disponible"
            />
    </LinearLayout>

</LinearLayout>
    

</LinearLayout>