<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/corner_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/DIMEN_30PX"
            android:layout_marginLeft="@dimen/DIMEN_66PX"
            android:text="@string/tv_shop_car"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>

        <include layout="@layout/layout_shopping_cart_title"/>
<android.support.v7.widget.RecyclerView
    android:id="@+id/recylerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

       <include layout="@layout/layout_shopping_cart_price_detail"/>


        <TextView
            android:id="@+id/shop_cart_ensure"
            android:layout_marginBottom="@dimen/DIMEN_60PX"
            android:layout_marginTop="@dimen/DIMEN_60PX"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/tv_sure"
            android:background="@drawable/dialog_search_button_bg"
            android:layout_width="@dimen/DIMEN_360PX"
            android:layout_height="@dimen/DIMEN_70PX" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>