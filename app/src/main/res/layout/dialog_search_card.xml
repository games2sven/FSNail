<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_440PX"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:background="@drawable/login_input_white_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_60PX"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:id="@+id/ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:background="@drawable/bg_search_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/DIMEN_17PX"
                        android:text="2018/07/22"
                        android:textColor="#333333"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:id="@+id/img_date_start"
                        android:layout_width="@dimen/DIMEN_34PX"
                        android:layout_height="@dimen/DIMEN_34PX"
                        android:layout_marginRight="@dimen/DIMEN_20PX"
                        android:src="@mipmap/remain_icon_date" />
                </LinearLayout>

                <com.jlkf.fsnail.widget.myspinner.singletextviewspinner.TextViewSpinner
                    android:id="@+id/product_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textSize="@dimen/DIMEN_28PX"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="@dimen/DIMEN_300PX"
                    app:ms_hint="@string/hint_produce_type"
                    app:ms_hint_color="#b0b0b0"
                    app:ms_text_color="@color/text_dark1" />

                <EditText
                    android:id="@+id/et_price_start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:background="@drawable/bg_search_item"
                    android:hint="@string/price"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textColor="#b0b0b0"
                    android:textColorHint="#b0b0b0"
                    android:textSize="@dimen/DIMEN_28PX" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:layout_marginRight="@dimen/DIMEN_20PX"
                    android:layout_marginTop="@dimen/DIMEN_90PX"
                    android:background="#b0b0b0" />

                <TextView
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:layout_marginRight="@dimen/DIMEN_20PX"
                    android:layout_marginTop="@dimen/DIMEN_90PX"
                    android:background="#b0b0b0"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:layout_marginRight="@dimen/DIMEN_20PX"
                    android:layout_marginTop="@dimen/DIMEN_90PX"
                    android:background="#b0b0b0" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:background="@drawable/bg_search_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/DIMEN_17PX"
                        android:text="2018/07/22"
                        android:textColor="#333333"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:id="@+id/img_date_end"
                        android:layout_width="@dimen/DIMEN_34PX"
                        android:layout_height="@dimen/DIMEN_34PX"
                        android:layout_marginRight="@dimen/DIMEN_20PX"
                        android:src="@mipmap/remain_icon_date" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:background="@drawable/bg_search_item"
                    android:hint="@string/card_num"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textColor="#b0b0b0"
                    android:textColorHint="#b0b0b0"
                    android:textSize="@dimen/DIMEN_28PX" />

                <EditText
                    android:id="@+id/et_price_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:background="@drawable/bg_search_item"
                    android:hint="@string/price"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textColor="#b0b0b0"
                    android:textColorHint="#b0b0b0"
                    android:textSize="@dimen/DIMEN_28PX" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_70PX"
                android:layout_marginRight="@dimen/DIMEN_60PX"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_bind_customer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:background="@drawable/bg_search_item"
                    android:hint="@string/bind_customer"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textColor="#b0b0b0"
                    android:textColorHint="#b0b0b0"
                    android:textSize="@dimen/DIMEN_28PX" />

                <com.jlkf.fsnail.widget.myspinner.singletextviewspinner.TextViewSpinner
                    android:id="@+id/card_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textSize="@dimen/DIMEN_28PX"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="@dimen/DIMEN_300PX"
                    app:ms_hint="@string/card_type"
                    app:ms_hint_color="#b0b0b0"
                    app:ms_text_color="@color/text_dark1" />

                <EditText
                    android:id="@+id/buy_customer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:background="@drawable/bg_search_item"
                    android:hint="@string/buy_customer"
                    android:paddingLeft="@dimen/DIMEN_17PX"
                    android:textColor="#b0b0b0"
                    android:textColorHint="#b0b0b0"
                    android:textSize="@dimen/DIMEN_28PX" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="@dimen/DIMEN_360PX"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_27PX"
            android:background="@drawable/dialog_search_button_bg"
            android:gravity="center"
            android:text="@string/tv_serch"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>