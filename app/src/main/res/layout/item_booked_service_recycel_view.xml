<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_98PX"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/item_service_time"
        android:text="11:50"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_date"
        android:text="2018/01/26"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_nike_name"
        android:text="KIKI"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_name"
        android:text="Veronical"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_phone"
        android:text="903929321xxx"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_category"
        android:text="fs1"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_service"
        android:text="Pedicure spa"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_band"
        android:text="fs1"
        style="@style/item_service_sty"

        />
    <TextView
        android:id="@+id/item_service_status"
        android:text="未开始"
        style="@style/item_service_sty"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/item_service_edit"

        android:layout_width="@dimen/DIMEN_28PX"
        android:layout_height="@dimen/DIMEN_31PX"
        android:src="@mipmap/content_icon_edit1"
        />
        <ImageView
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:id="@+id/item_service_add"
            android:layout_width="@dimen/DIMEN_28PX"
            android:layout_height="@dimen/DIMEN_31PX"
            android:src="@mipmap/content_icon_add11"
            />
    </LinearLayout>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#cacbcc"
        />
</LinearLayout>