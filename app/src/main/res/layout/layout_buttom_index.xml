<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_136PX">


    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DIMEN_50PX"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48PX"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <ImageView
            android:src="@mipmap/page_left"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX" />

        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX"
            android:background="@drawable/index_number_select_bg"
            android:text="1"
            android:gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX"
            android:background="@drawable/index_number_unselect_bg"
            android:text="2"
            android:gravity="center"
            android:textColor="#333333"
            />
        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX"
            android:background="@drawable/index_number_unselect_bg"
            android:text="3"
            android:gravity="center"
            android:textColor="#333333"
            />
        <TextView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX"
            android:background="@drawable/index_number_unselect_bg"
            android:text="4"
            android:gravity="center"
            android:textColor="#333333"
            />


        <ImageView
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:src="@mipmap/page_right"
            android:layout_width="@dimen/DIMEN_48PX"
            android:layout_height="@dimen/DIMEN_48PX" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_service_more"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_80PX"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/DIMEN_96PX"
        android:layout_height="@dimen/DIMEN_96PX"
        android:src="@mipmap/btn_more_red1"
        />


</RelativeLayout>