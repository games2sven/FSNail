<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/green_94c42e"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setting"
            android:layout_width="@dimen/DIMEN_32PX"
            android:layout_height="@dimen/DIMEN_32PX"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:src="@mipmap/left_icon_unshow" />

        <com.jlkf.fsnail.widget.NetworkImageView
            android:id="@+id/bg_avator"
            android:layout_width="@dimen/DIMEN_120PX"
            android:layout_height="@dimen/DIMEN_120PX"
            android:layout_below="@+id/setting"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/DIMEN_8PX"
            android:src="@mipmap/bg_avator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_9PX"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="Jonson"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_36PX" />

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="@dimen/DIMEN_24PX"
                android:layout_height="@dimen/DIMEN_24PX"
                android:layout_marginLeft="@dimen/DIMEN_15PX"
                android:layout_marginRight="@dimen/DIMEN_48PX"
                android:layout_toRightOf="@+id/tv_name"
                android:src="@mipmap/profile_icon_more"
                android:layout_centerVertical="true"
                android:visibility="visible"/>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/DIMEN_31PX"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_service"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_service"
                    style="@style/actioniv"
                    android:src="@drawable/ic_service_selector" />

                <TextView
                    android:id="@+id/tv_service"
                    style="@style/actiontv"
                    android:text="@string/text_service"
                   />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customer"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_customer"
                    style="@style/actioniv"
                    android:src="@drawable/ic_customer_selector" />

                <TextView
                    android:id="@+id/tv_customer"
                    style="@style/actiontv"
                    android:text="@string/text_customer" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_employee"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_employee"
                    style="@style/actioniv"
                    android:src="@drawable/ic_emplyee_selector" />

                <TextView
                    android:id="@+id/tv_employee"
                    style="@style/actiontv"
                    android:text="@string/tv_employee" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_book"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_book"
                    style="@style/actioniv"
                    android:src="@drawable/ic_booking_selector" />

                <TextView
                    android:id="@+id/tv_book"
                    style="@style/actiontv"
                    android:text="@string/tv_book" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_menu"
                    style="@style/actioniv"
                    android:src="@drawable/ic_menu_selector" />

                <TextView
                    android:id="@+id/tv_menu"
                    style="@style/actiontv"
                    android:text="@string/text_price_menu" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_order"
                    style="@style/actioniv"
                    android:src="@drawable/ic_order_selector" />

                <TextView
                    android:id="@+id/tv_order"
                    style="@style/actiontv"
                    android:text="@string/tv_order_manager" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_conpous"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    style="@style/actioniv"
                    android:id="@+id/img_conpous"
                    android:src="@drawable/ic_conpous_selector" />

                <TextView
                    android:id="@+id/tv_conpous"
                    style="@style/actiontv"
                    android:text="@string/tv_conpous_manager" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chat"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    style="@style/actioniv"
                    android:id="@+id/img_chat"
                    android:src="@drawable/ic_chat_selector" />

                <TextView
                    android:id="@+id/tv_chat"
                    style="@style/actiontv"
                    android:text="聊天" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_store"
                style="@style/actionbtn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_store"
                    style="@style/actioniv"
                    android:src="@drawable/ic_store_selector" />

                <TextView
                    android:id="@+id/tv_store"
                    style="@style/actiontv"
                    android:text="@string/tv_market" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
