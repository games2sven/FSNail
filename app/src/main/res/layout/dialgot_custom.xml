<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:background="@drawable/corner_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/DIMEN_109PX"
            android:paddingBottom="@dimen/DIMEN_70PX"
            android:orientation="vertical"
            >

        <TextView
            android:lineSpacingExtra="5dp"
            android:layout_marginRight="@dimen/DIMEN_76PX"
            android:layout_marginLeft="@dimen/DIMEN_76PX"
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#474a4d"
            android:text="@string/tv_service_charge"
            android:textSize="@dimen/DIMEN_36PX" />


            <TextView
                android:visibility="gone"
                android:textColor="#b0b0b0"
                android:textSize="15sp"
                android:id="@+id/dialog_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="@string/tv_sorry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/black_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_sure"
                android:textColor="#94c42e"
                android:textSize="@dimen/DIMEN_32PX" />

            <View
                android:id="@+id/dialog_line"
                android:layout_width="@dimen/DIMEN_1PX"
                android:layout_height="match_parent"
                android:background="@color/black_cccccc" />

            <TextView
                android:id="@+id/dialog_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_cancel"
                android:textColor="#b0b0b0"
                android:textSize="@dimen/DIMEN_32PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>