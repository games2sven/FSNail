<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_98PX"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            style="@style/item_service_sty"
            android:text="0001"
            />

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/item_service_sty"
            android:text="Buono"

            />

        <TextView
            android:id="@+id/tv_type"
            style="@style/item_service_sty"
            android:text="Buono"

            />

        <TextView
            android:id="@+id/tv_brand"
            style="@style/item_service_sty"
            android:text="KIKI"

            />

        <TextView
            android:id="@+id/tv_descripe"
            style="@style/item_service_sty"
            android:text="1buono" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/item_service_sty"
            android:text="1$" />

        <ImageView
            android:id="@+id/img_shop_car"
            android:layout_width="@dimen/DIMEN_31PX"
            android:layout_height="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_55PX"
            android:src="@mipmap/content_icon_cart1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#cacbcc" />
</LinearLayout>