<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/ll_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_32PX"
            android:layout_marginRight="@dimen/DIMEN_32PX"
            android:background="@drawable/corner_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_names_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_80PX"
                android:background="@drawable/bg_select"
                android:gravity="center"
                android:text="@string/tv_set_rest"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_30PX" />



    <LinearLayout
        android:layout_marginTop="@dimen/DIMEN_35PX"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_65PX"
         android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_marginLeft="@dimen/DIMEN_80PX"
            android:textSize="@dimen/DIMEN_28PX"
            android:text="@string/book_date"
            android:textColor="@color/black_333333"
            android:layout_width="@dimen/DIMEN_78PX"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bg_search_item"
            android:layout_width="@dimen/DIMEN_360PX"
            android:layout_height="@dimen/DIMEN_64PX"
            android:orientation="horizontal"
            >

            <TextView
                android:paddingLeft="@dimen/DIMEN_17PX"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/DIMEN_28PX"
                android:textColor="#333333"
                android:hint="@string/tv_customer_birthday"
                />

            <ImageView
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:layout_width="@dimen/DIMEN_34PX"
                android:layout_height="@dimen/DIMEN_34PX"
                android:src="@mipmap/remain_icon_date"
                />
        </LinearLayout>




    </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_260PX"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                >
                <TextView
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:id="@+id/set_rest_des"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/DIMEN_80PX"
                    android:textSize="@dimen/DIMEN_28PX"
                    android:text="@string/tv_things_descripe"
                    android:textColor="@color/black_333333"
                    android:layout_width="@dimen/DIMEN_120PX"
                    android:layout_height="wrap_content" />



                <EditText
                    android:padding="@dimen/DIMEN_10PX"
                    android:gravity="top"
                    android:layout_toRightOf="@id/set_rest_des"
                    android:layout_marginLeft="@dimen/DIMEN_23PX"
                    android:layout_width="@dimen/DIMEN_785PX"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/DIMEN_28PX"
                    android:background="@drawable/gray_stoke_bg"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:layout_marginBottom="@dimen/DIMEN_40PX"
                android:id="@+id/text_ok"
                android:layout_width="@dimen/DIMEN_330PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:layout_gravity="center"
                android:background="@drawable/dialog_search_button_bg"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_30PX" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_cancel"
            android:layout_width="@dimen/DIMEN_64PX"
            android:layout_height="@dimen/DIMEN_64PX"
            android:layout_alignParentRight="true"
            android:src="@mipmap/remain_close" />
    </RelativeLayout>


</RelativeLayout>