<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/top_cell_length"
    android:layout_height="@dimen/top_cell_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/left_ceil"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/data_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_dark1"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="10-25" />

        <TextView
            android:id="@+id/week_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_dark1"
            android:textSize="10sp"
            tools:text="二" />

        <TextView
            android:id="@+id/available_room_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/text_dark3"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="剩7间" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/DIMEN_1PX"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />
</RelativeLayout>